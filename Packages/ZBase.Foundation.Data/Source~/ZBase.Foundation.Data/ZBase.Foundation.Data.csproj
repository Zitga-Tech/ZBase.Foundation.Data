<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <LangVersion>9.0</LangVersion>
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging" Version="7.0.0" />
        <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />
        <PackageReference Include="Unity3D" Version="2.1.2" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../BakingSheet/BakingSheet.csproj" />
    </ItemGroup>

    <Target Name="DeleteSourceFiles" AfterTargets="Build" BeforeTargets="CopySourceFiles">
        <RemoveDir Directories="$(ProjectDir)../../Data/Src/" />
        <RemoveDir Directories="$(ProjectDir)../../Data.Authoring/Src/" />
    </Target>

    <Target Name="CopySourceFiles" AfterTargets="Build">
        <ItemGroup>
            <DataFiles Include="$(ProjectDir)/Data/**/*.*" />
            <DataAuthoringFiles Include="$(ProjectDir)/Data.Authoring/**/*.*" />
        </ItemGroup>
        
        <Copy SourceFiles="@(DataFiles)" DestinationFolder="$(ProjectDir)../../Data/Src/%(RecursiveDir)" SkipUnchangedFiles="true" Retries="3" RetryDelayMilliseconds="300" />
        
        <Copy SourceFiles="@(DataAuthoringFiles)" DestinationFolder="$(ProjectDir)../../Data.Authoring/Src/%(RecursiveDir)" SkipUnchangedFiles="true" Retries="3" RetryDelayMilliseconds="300" />
    </Target>
    
</Project>
